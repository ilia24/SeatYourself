<div class="form_container">

  <% if @restaurant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this edit from being saved:</h2>

      <ul>
      <% @restaurant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for (@restaurant) do |f| %>

  <div id="name">
    <p>
    <%= f.label :name %>
    <br><%= f.text_field :name %>
    </p>
  </div>

  <div id="open_time">
    <p>
    <%= f.label :opentime %>
    <br><%= f.time_select :opentime, {ampm: true, minute_step: 30} %>
    </p>
  </div>

  <div id="close_time">
    <p>
    <%= f.label :closetime %>
    <br><%= f.time_select :closetime, {ampm:true, minute_step: 30}  %>
    </p>
  </div>

<div class = "image"
  <p>
  <%= f.label :image %>
  <br><%= f.url_field :image_url %>
  </p>
</div>

<div id="capacity">
  <p>
  <%= f.label :capacity %>
  <br><%= f.text_field :capacity %>
  </p>
</div>

  <div class="submit">
    <p>
      <%= f.submit %>
    </p>
  </div>

<%end%>

</div>
