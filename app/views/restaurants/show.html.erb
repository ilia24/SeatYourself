<h1> <%= @restaurant.name %> </h1>

<p>
  <%= link_to 'Back to all restaurants', restaurants_path %>
</p>

<%= render 'single_restaurant', restaurant: @restaurant %>
<%= link_to 'Edit', edit_restaurant_path(@restaurant) %>
<%= link_to 'Delete', restaurant_path(@restaurant), method: :delete, data: {confirm: "Are you sure you want to delete the restaurant #{@restaurant.name}? This cannot be undone!"}%>

<h3> Reviews </h3>
<p> Reviews for <%= @restaurant.name %>
  <% @restaurant.reviews.each do |review| %>
  <p>
      <%= review.comment %>
      <br>
      <% if review.user != nil %>
       <em> by <%=review.user.name %> </em>
       Added on: <%= review.created_at %>
       Liked by: <%= review.liked_by %> Disliked by: <%= review.disliked_by %>
       <%end %>
    </p>
  <%end%>

  <% if current_user %>
<h4> New Review </h4>

<%= form_for([@restaurant, @review]) do |f| %>

<% if @review.errors.any? %>
     <div id="error_explanation">
       <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

       <ul>
       <% @review.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
       <% end %>
       </ul>
     </div>
   <% end %>

<p>
<%= f.label :comment %>
<%= f.text_area :comment %>
</p>
<p>
<%= f.submit %>
</p>
<% end %>

<% else %>
<p> Please <%= link_to 'Log In', new_session_path %> or <%= link_to 'Sign Up', new_user_path%> to add a review
</p>
<% end %>
