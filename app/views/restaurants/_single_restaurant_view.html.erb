                <%= image_tag ("ic_room_white_24px.svg") %>
              </div>
              <div class="corresponding_info">
                <p>Address</p>
                <%= restaurant.address %>
              </div>
            </div>
          </div>

          <div class="info_content_container">
            <div class="side_info">
              <div class="icon_container">
                <%= image_tag ("ic_access_time_white_24px.svg") %>
              </div>
              <div class="corresponding_info">
                <p>Hours of Operation</p>
                <% e = Time.now.strftime("%A") %>
                <div class="days">

                  <% if e=="Monday" %>
                  <strong>Monday</strong>
                  <br>
                  <% else %>
                  Monday
                  <br>
                  <%end%>

                  <% if e=="Tuesday" %>
                  <strong>Tuesday</strong>
                  <br>
                  <% else %>
                  Tuesday
                  <br>
                  <%end%>

                  <% if e=="Wednesday" %>
                  <strong>Wednesday</strong>
                  <br>
                  <% else %>
                  Wednesday
                  <br>
                  <%end%>

                  <% if e=="Thursday" %>
                  <strong>Thursday</strong>
                  <br>
                  <% else %>
                  Thursday
                  <br>
                  <%end%>

                  <% if e=="Friday" %>
                  <strong>Friday</strong>
                  <br>
                  <% else %>
                  Friday
                  <br>
                  <%end%>

                  <% if e=="Saturday" %>
                  <strong>Saturday</strong>
                  <br>
                  <% else %>
                  Saturday
                  <br>
                  <%end%>

                  <% if e=="Sunday" %>
                  <strong>Sunday</strong>
                  <br>
                  <% else %>
                  Sunday
                  <br>
                  <%end%>

                </div>
                <div class="hours">
                  <% f = Time.now.strftime("%A") %>

                  <%if f=="Monday" %>
                  <strong>
                  <%= restaurant.mondayopen.strftime("%I:%M %p") %> - <%= restaurant.mondayclose.strftime("%I:%M %p") %>
                 </strong>
                  <br>
                  <%else%>
                  <%= restaurant.mondayopen.strftime("%I:%M %p") %> - <%= restaurant.mondayclose.strftime("%I:%M %p") %>
                  <br>
                  <%end%>

                  <%if f=="Tuesday" %>
                  <strong>
                  <%= restaurant.tuesdayopen.strftime("%I:%M %p") %> - <%= restaurant.tuesdayclose.strftime("%I:%M %p") %>
                </strong>
                 <br>
                 <%else%>
                  <%= restaurant.tuesdayopen.strftime("%I:%M %p") %> - <%= restaurant.tuesdayclose.strftime("%I:%M %p") %>
                  <br>
                  <%end%>



                  <%if f=="Wednesday" %>
                  <strong>
                  <%= restaurant.wednesdayopen.strftime("%I:%M %p") %> - <%= restaurant.wednesdayclose.strftime("%I:%M %p") %>
                </strong>
                  <br>
                  <%else%>
                  <%= restaurant.wednesdayopen.strftime("%I:%M %p") %> - <%= restaurant.wednesdayclose.strftime("%I:%M %p") %>
                  <br>
                  <%end%>

                  <%if f=="Thursday" %>
                  <strong>
                  <%= restaurant.thursdayopen.strftime("%I:%M %p") %> - <%= restaurant.thursdayclose.strftime("%I:%M %p") %>
                </strong>
                  <br>
                  <%else%>
                    <%= restaurant.thursdayopen.strftime("%I:%M %p") %> - <%= restaurant.thursdayclose.strftime("%I:%M %p") %>
                  <br>
                  <%end%>

                  <%if f=="Friday" %>
                  <strong>
                  <%= restaurant.fridayopen.strftime("%I:%M %p") %> - <%= restaurant.fridayclose.strftime("%I:%M %p") %>
                 </strong>
                  <br>
                  <%else%>
                    <%= restaurant.fridayopen.strftime("%I:%M %p") %> - <%= restaurant.fridayclose.strftime("%I:%M %p") %>
                  <br>
                  <%end%>

                  <%if f=="Saturday" %>
                  <strong>
                  <%= restaurant.saturdayopen.strftime("%I:%M %p") %> - <%= restaurant.saturdayclose.strftime("%I:%M %p") %>
                </strong>
                  <br>
                  <%else%>
                  <%= restaurant.saturdayopen.strftime("%I:%M %p") %> - <%= restaurant.saturdayclose.strftime("%I:%M %p") %>
                  <br>
                  <%end%>

                  <%if f=="Sunday" %>
                  <strong>
                  <%= restaurant.sundayopen.strftime("%I:%M %p") %> - <%= restaurant.sundayclose.strftime("%I:%M %p") %>
                  </strong>
                  <br>
                  <%else%>
                  <%= restaurant.sundayopen.strftime("%I:%M %p") %> - <%= restaurant.sundayclose.strftime("%I:%M %p") %>
                  <br>
                  <%end%>

                </div>
              </div>
            </div>
          </div>

          <div class="info_content_container">
            <div class="side_info">
              <div class="icon_container">
                <%= image_tag ("ic_call_white_24px.svg") %>
              </div>
              <div class="corresponding_info">
                <p>Contact Number</p>
                <%= restaurant.contact_number %>
              </div>
            </div>
          </div>

          <div class="info_content_container">
            <div class="side_info">
              <div class="icon_container">
                <%= image_tag ("ic_language_white_24px.svg") %>
              </div>
              <div class="corresponding_info">
                <p>Website</p>
                <%= restaurant.website %>
              </div>
            </div>
          </div>

          <div class="info_content_container">
            <div class="side_info">
              <div class="icon_container">
                <%= image_tag ("ic_room_white_24px.svg") %>
              </div>
              <div class="corresponding_info">
                <p>Price Range</p>
                <%= Restaurant.price_range_conversion(@restaurant.id)[0] %><%= Restaurant.price_range_conversion(@restaurant.id)[1] %>
              </div>
            </div>
          </div>

        </div>
      </div>


